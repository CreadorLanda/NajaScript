// NajaScript Class Test

// Basic class definition
class Person {
    public string name;
    public int age;
    
    constructor(string n, int i) {
        this.name = n;
        this.age = i;
    }
    
    public string getName() {
        return this.name;
    }
    
    public int getAge() {
        return this.age;
    }
    
    public void greet() {
        println("Hello, my name is " + this.name);
    }
}

// Inheritance
class Student extends Person {
    public string course;
    
    constructor(string n, int i, string c) {
        super(n, i);
        this.course = c;
    }
    
    public string getCourse() {
        return this.course;
    }
    
    // Override method
    public void greet() {
        println("Hi, I'm " + this.name + " and I study " + this.course);
    }
}

// Main function to test classes
fun main() {
    println("=== Class Test ===");
    
    // Create a Person
    Person person = new Person("John", 30);
    println("Person name: " + person.getName());
    println("Person age: " + person.getAge());
    person.greet();
    
    // Create a Student
    Student student = new Student("Maria", 20, "Computer Science");
    println("Student name: " + student.getName());
    println("Student age: " + student.getAge());
    println("Student course: " + student.getCourse());
    student.greet();
    
    // Polymorphism
    Person person2 = new Student("Pedro", 22, "Physics");
    println("Polymorphic person name: " + person2.getName());
    person2.greet();  // Should call the Student's greet method
    
    println("=== Test Complete ===");
}

// Execute the test
main(); 