println("a = " + a);
println("b = " + b);
println("c = " + c);
println("d = " + d);

// Operations
int sum = a + 5;
float product = b * 2;
bool logical_and = true && false;
bool logical_or = true || false;
bool comparison = 10 > 5;

println("\n=== Operations ===");
println("sum = " + sum);
println("product = " + product);
println("logical_and = " + logical_and);
println("logical_or = " + logical_or);
println("comparison = " + comparison);

// Conditionals
println("\n=== Conditionals ===");
if (a > 5) {
    println("a is greater than 5");
} else {
    println("a is not greater than 5");
}

// Loops
println("\n=== Loops ===");
println("While loop:");
int i = 0;
while (i < 3) {
    println("  i = " + i);
    i = i + 1;
}

println("For loop:");
for (int j = 0; j < 3; j = j + 1) {
    println("  j = " + j);
}

// Data structures
println("\n=== Data Structures ===");
list numbers = [1, 2, 3, 4, 5];
println("List: " + numbers);
println("List length: " + numbers.length());
println("List element at index 2: " + numbers.get(2));

dict person = {};
person.add("name", "Maria");
person.add("age", 30);
println("Dictionary: " + person);
println("Dictionary value for 'name': " + person.get("name"));

